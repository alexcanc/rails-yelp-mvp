<h1>Edit <%= @restaurant.name %></h1>

<%= form_with(model: @restaurant) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <!-- Add other fields as needed -->
  <div class="actions">
    <%= form.submit 'Update Restaurant' %>
  </div>
<% end %>

<%= link_to 'Back', @restaurant %>
